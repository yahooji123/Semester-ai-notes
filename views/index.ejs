<%- include('partials/header') %>


    <!-- Hero / Search Section -->
    <div class="row justify-content-center mb-5" data-aos="fade-down">
        <div class="col-lg-8 text-center">
            <h1 class="display-5 fw-bold text-primary mb-3">Master Your Subjects</h1>
            <p class="lead text-muted mb-4">Find notes, track progress, and ace your exams.</p>
            
            <form action="/search" method="GET" class="search-wrapper">
                <input type="text" name="q" class="form-control search-input" placeholder="Search for any topic (e.g. 'Binary Trees')..." autocomplete="off">
            </form>
        </div>
    </div>

    <!-- Goal Setting System (Logged In Only) -->
    <% if (typeof user !== 'undefined' && user) { %>
        <div class="row mb-5" data-aos="fade-up">
            <div class="col-12">
                <div class="card border-0 shadow-sm bg-primary bg-opacity-10">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="mb-0 fw-bold text-primary"><i class="fas fa-bullseye me-2"></i>My Study Goals</h4>
                            <button class="btn btn-primary btn-sm rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#addGoalModal">
                                <i class="fas fa-plus me-1"></i> New Goal
                            </button>
                        </div>
                        
                        <div class="row g-3">
                            <% if (typeof goals !== 'undefined' && goals.length > 0) { %>
                                <% goals.forEach(goal => { %>
                                    <div class="col-md-6 col-lg-4">
                                        <div class="card h-100 border-0 shadow-sm <%= goal.completed ? 'bg-success bg-opacity-25' : 'bg-white' %>">
                                            <div class="card-body d-flex align-items-center justify-content-between">
                                                <div class="<%= goal.completed ? 'text-decoration-line-through text-muted' : '' %>">
                                                    <h6 class="fw-bold mb-1"><%= goal.title %></h6>
                                                    <small class="text-muted">Target: <%= new Date(goal.targetDate).toLocaleDateString() %></small>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <form action="/goals/<%= goal._id %>/toggle" method="POST" class="d-inline">
                                                        <button class="btn btn-sm btn-link text-success p-0 me-2" title="Mark user as done">
                                                            <i class="far <%= goal.completed ? 'fa-check-square' : 'fa-square' %> fa-lg"></i>
                                                        </button>
                                                    </form>
                                                    <form action="/goals/<%= goal._id %>/delete" method="POST" class="d-inline">
                                                        <button class="btn btn-sm btn-link text-danger p-0" onclick="return confirm('Remove this goal?')">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="col-12 text-center text-muted py-3">
                                    <small>No goals set yet. Set a target to stay motivated!</small>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Add Goal Modal -->
        <div class="modal fade" id="addGoalModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Set New Goal</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form action="/goals" method="POST">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Goal</label>
                                <input type="text" name="title" class="form-control" placeholder="e.g. Finish OS Unit 1" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Target Date</label>
                                <input type="date" name="targetDate" class="form-control" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Set Goal</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    <% } %>

    <%
        // Group subjects by semester
        const subjectsBySem = {};
        if (typeof subjects !== 'undefined' && subjects.length > 0) {
            subjects.forEach(sub => {
                const sem = sub.semester || 1;
                if (!subjectsBySem[sem]) subjectsBySem[sem] = [];
                subjectsBySem[sem].push(sub);
            });
        }
        const semesters = Object.keys(subjectsBySem).sort((a,b) => a - b);
    %>

    <!-- Subjects Section with Semester Tabs -->
    <div class="row" data-aos="fade-up">
        <div class="col-12 mb-4">
            <h3 class="fw-bold text-dark border-start border-4 border-primary ps-3">Your Subjects</h3>
        </div>

        <div class="col-12 mb-4">
            <ul class="nav nav-pills nav-fill bg-white rounded shadow-sm p-1" id="semesterTab" role="tablist">
                <% if (semesters.length > 0) { %>
                    <% semesters.forEach((sem, index) => { %>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link <%= index === 0 ? 'active fw-bold' : '' %>" id="sem-<%= sem %>-tab" data-bs-toggle="tab" data-bs-target="#sem-<%= sem %>" type="button" role="tab">
                                Semester <%= sem %>
                            </button>
                        </li>
                    <% }) %>
                <% } else { %>
                    <li class="nav-item"><span class="nav-link disabled">No Data</span></li>
                <% } %>
            </ul>
        </div>

        <div class="col-12">
            <div class="tab-content" id="semesterTabContent">
                <% if (semesters.length > 0) { %>
                    <% semesters.forEach((sem, index) => { %>
                        <div class="tab-pane fade <%= index === 0 ? 'show active' : '' %>" id="sem-<%= sem %>" role="tabpanel">
                            <div class="row g-4">
                                <% subjectsBySem[sem].forEach(subject => { %>
                                    <div class="col-md-6 col-lg-3" data-aos="zoom-in" data-aos-delay="100">
                                        <div class="card h-100 border-0 hover-card p-3">
                                            <div class="subject-icon">
                                                <i class="fas fa-book-open"></i>
                                            </div>
                                            <div class="card-body text-center p-0 pt-2">
                                                <h3 class="h5 fw-bold mb-2 text-dark"><%= subject.name %></h3>
                                                <p class="text-muted small mb-3"><%= subject.description || 'Comprehensive study notes' %></p>
                                                
                                                <% if (typeof progressMap !== 'undefined' && progressMap[subject._id]) { %>
                                                    <div class="text-start mb-1 ms-1">
                                                        <small class="text-muted fw-bold" style="font-size: 0.7rem;">PROGRESS</small>
                                                    </div>
                                                    <div class="progress progress-slim mb-2" title="<%= progressMap[subject._id].percentage %>% Completed">
                                                        <div class="progress-bar progress-bar-custom" role="progressbar" style="width: <%= progressMap[subject._id].percentage %>%"></div>
                                                    </div>
                                                    <div class="d-flex justify-content-between">
                                                        <span class="badge bg-light text-dark border"><%= progressMap[subject._id].completed %>/<%= progressMap[subject._id].total %> Topics</span>
                                                    </div>
                                                <% } %>
                    
                                                <a href="/subject/<%= subject._id %>" class="btn btn-outline-primary w-100 rounded-pill mt-3 stretched-link">Start Learning</a>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-5">
                       <p class="text-muted">No subjects found.</p>
                       <div class="alert alert-light border shadow-sm p-4 rounded-3 d-inline-block mt-3">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <p class="mb-0">No subjects added yet. Login as Admin to add one!</p>
                       </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
<%- include('partials/footer') %>
