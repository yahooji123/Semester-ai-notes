<%- include('partials/header') %>


    <!-- Hero / Search Section -->
    <div class="row justify-content-center mb-5 hero-section" data-aos="fade-down">
        <div class="col-lg-8 text-center position-relative">
            <!-- Decorative Background Elements -->
            <div class="position-absolute top-50 start-50 translate-middle" style="z-index: -1;">
                <div style="width: 300px; height: 300px; background: var(--primary-color); filter: blur(100px); opacity: 0.15; border-radius: 50%;"></div>
            </div>

            <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 rounded-pill mb-3 px-3 py-2 fw-semibold">
                Build your Future ðŸš€
            </span>
            <h1 class="display-4 fw-bold text-dark mb-3" style="letter-spacing: -1px;">
                Master Your <span class="text-transparent bg-clip-text" style="background-image: var(--gradient-brand); -webkit-background-clip: text; color: transparent;">Semester Notes</span>
            </h1>
            <p class="lead text-muted mb-5 px-lg-5" style="line-height: 1.8;">
                Access premium notes, track your daily progress, and compete on the leaderboard.
            </p>
            
            <form action="/search" method="GET" class="search-wrapper position-relative z-2">
                <input type="text" name="q" class="form-control search-input py-3 ps-5 border-0 shadow-lg" placeholder="Search topics (e.g. 'Binary Trees')..." autocomplete="off" style="border-radius: 50px;">
                <button type="submit" class="btn position-absolute top-50 end-0 translate-middle-y me-2 rounded-circle btn-primary" style="width: 40px; height: 40px; display: grid; place-items: center;">
                    <i class="fas fa-search text-white"></i>
                </button>
            </form>
        </div>
    </div>

    <!-- Goal Setting System (Logged In Only) -->
    <% if (typeof user !== 'undefined' && user) { %>
        <div class="row mb-5" data-aos="fade-up">
            <div class="col-12">
                <div class="card border-0 shadow-sm bg-primary bg-opacity-10">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="mb-0 fw-bold text-primary"><i class="fas fa-bullseye me-2"></i>My Study Goals</h4>
                            <button class="btn btn-primary btn-sm rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#addGoalModal">
                                <i class="fas fa-plus me-1"></i> New Goal
                            </button>
                        </div>
                        
                        <div class="row g-3">
                            <% if (typeof goals !== 'undefined' && goals.length > 0) { %>
                                <% goals.forEach(goal => { %>
                                    <div class="col-md-6 col-lg-4">
                                        <div class="card h-100 border-0 shadow-sm <%= goal.completed ? 'bg-success bg-opacity-25' : 'bg-white' %>">
                                            <div class="card-body d-flex align-items-center justify-content-between">
                                                <div class="<%= goal.completed ? 'text-decoration-line-through text-muted' : '' %>">
                                                    <h6 class="fw-bold mb-1"><%= goal.title %></h6>
                                                    <small class="text-muted">Target: <%= new Date(goal.targetDate).toLocaleDateString() %></small>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <form action="/goals/<%= goal._id %>/toggle" method="POST" class="d-inline">
                                                        <button class="btn btn-sm btn-link text-success p-0 me-2" title="Mark user as done">
                                                            <i class="far <%= goal.completed ? 'fa-check-square' : 'fa-square' %> fa-lg"></i>
                                                        </button>
                                                    </form>
                                                    <form action="/goals/<%= goal._id %>/delete" method="POST" class="d-inline">
                                                        <button class="btn btn-sm btn-link text-danger p-0" onclick="return confirm('Remove this goal?')">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="col-12 text-center text-muted py-3">
                                    <small>No goals set yet. Set a target to stay motivated!</small>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Add Goal Modal -->
        <div class="modal fade" id="addGoalModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Set New Goal</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form action="/goals" method="POST">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Goal</label>
                                <input type="text" name="title" class="form-control" placeholder="e.g. Finish OS Unit 1" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Target Date</label>
                                <input type="date" name="targetDate" class="form-control" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Set Goal</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    <% } %>

    <%
        // Group subjects by semester
        const subjectsBySem = {};
        if (typeof subjects !== 'undefined' && subjects.length > 0) {
            subjects.forEach(sub => {
                const sem = sub.semester || 1;
                if (!subjectsBySem[sem]) subjectsBySem[sem] = [];
                subjectsBySem[sem].push(sub);
            });
        }
        const semesters = Object.keys(subjectsBySem).sort((a,b) => a - b);
    %>

    <!-- Subjects Section with Semester Filter -->
    <div class="row" data-aos="fade-up">
        
        <!-- Header & Animated Dropdown Filter -->
        <div class="col-12 mb-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
            <h3 class="fw-bold text-dark border-start border-4 border-primary ps-3 mb-0">Your Subjects</h3>
            
            <% if (semesters.length > 0) { %>
                <div class="dropdown">
                    <button class="btn btn-outline-primary shadow-sm dropdown-toggle px-4 py-2 fw-bold rounded-pill d-flex align-items-center gap-2 transition-all hover-scale" 
                            type="button" 
                            id="semesterDropdown" 
                            data-bs-toggle="dropdown" 
                            aria-expanded="false" 
                            style="min-width: 180px; justify-content: space-between;">
                        <span><i class="fas fa-layer-group me-2"></i> Semester <%= semesters[0] %></span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-4 mt-2 p-2" aria-labelledby="semesterDropdown" style="animation: fadeInUp 0.3s ease;">
                        <% semesters.forEach((sem, index) => { %>
                            <li>
                                <button class="dropdown-item rounded-3 py-2 px-3 mb-1 fw-medium d-flex align-items-center justify-content-between <%= index === 0 ? 'active-sem-filter' : '' %>" 
                                        type="button" 
                                        onclick="filterSemester('<%= sem %>', this)">
                                    <span>Semester <%= sem %></span>
                                    <% if (index === 0) { %> <i class="fas fa-check text-primary check-icon"></i> <% } %>
                                </button>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
        </div>

        <div class="col-12">
            <div class="tab-content position-relative" id="semesterTabContent" style="min-height: 300px;">
                <% if (semesters.length > 0) { %>
                    <% semesters.forEach((sem, index) => { %>
                        <div class="tab-pane fade <%= index === 0 ? 'show active' : '' %>" id="sem-<%= sem %>" role="tabpanel">
                            <div class="row g-4">
                                <% subjectsBySem[sem].forEach(subject => { %>
                                <div class="col-md-6 col-lg-3 subject-card" data-aos="zoom-in" data-aos-duration="600">
                                    <div class="card h-100 hover-card p-0 overflow-hidden position-relative">
                                        <div class="position-relative d-flex align-items-center justify-content-center" style="height: 140px; background: radial-gradient(circle at center, rgba(99, 102, 241, 0.05), rgba(99, 102, 241, 0.0));">
                                             <div class="d-inline-flex align-items-center justify-content-center bg-white shadow-sm rounded-circle position-relative z-1" style="width: 70px; height: 70px; border: 1px solid rgba(255,255,255,0.8);">
                                                <i class="fas fa-book-open fa-2x" style="background: var(--gradient-brand); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                                             </div>
                                             <!-- Glow Effect -->
                                             <div class="position-absolute top-50 start-50 translate-middle" style="width: 60px; height: 60px; background: var(--gradient-brand); opacity: 0.15; filter: blur(25px); border-radius: 50%;"></div>
                                        </div>

                                        <div class="card-body text-center p-4 pt-1">
                                            <h3 class="h5 fw-bold mb-2 text-dark"><%= subject.name %></h3>
                                            <p class="text-muted small mb-4 text-truncate"><%= subject.description || 'Comprehensive study notes' %></p>
                                            
                                            <% if (typeof progressMap !== 'undefined' && progressMap[subject._id]) { %>
                                                <div class="d-flex justify-content-between align-items-end mb-2 px-1">
                                                    <small class="text-secondary fw-bold" style="font-size: 0.65rem; letter-spacing: 0.5px;">PROGRESS</small>
                                                    <small class="fw-bold" style="font-size: 0.75rem;"><%= progressMap[subject._id].percentage %>%</small>
                                                </div>
                                                <div class="progress mb-4 mx-1" style="height: 6px; border-radius: 10px; background-color: #f1f5f9;">
                                                    <div class="progress-bar" role="progressbar" style="width: <%= progressMap[subject._id].percentage %>%; border-radius: 10px; background: var(--gradient-brand);"></div>
                                                </div>
                                            <% } else { %>
                                                 <div class="mb-4"></div>
                                            <% } %>
                
                                            <a href="/subject/<%= subject._id %>" class="btn btn-primary w-100 rounded-pill py-2 shadow-sm fw-medium stretched-link">
                                                Start Learning
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-5">
                       <div class="alert alert-light border shadow-sm p-4 rounded-3 d-inline-block mt-3">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <p class="mb-0">No subjects added yet. Login as Admin to add one!</p>
                       </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Custom styles moved to style.css for Premium UI -->

    <script>
        function filterSemester(sem, btnElement) {
            // 1. Hide all current panes
            const allPanes = document.querySelectorAll('.tab-pane');
            allPanes.forEach(pane => {
                pane.classList.remove('show', 'active');
            });

            // 2. Show target pane
            const targetPane = document.getElementById('sem-' + sem);
            if (targetPane) {
                targetPane.classList.add('active');
                // Small delay to allow CSS display:block to apply before opacity transition
                setTimeout(() => targetPane.classList.add('show'), 10);
            }

            // 3. Update Dropdown Button Text
            const dropdownBtn = document.getElementById('semesterDropdown');
            dropdownBtn.innerHTML = `<span><i class="fas fa-layer-group me-2"></i> Semester ${sem}</span>`;

            // 4. Handle Active Class on Dropdown Items
            document.querySelectorAll('.dropdown-item').forEach(item => {
                item.classList.remove('active-sem-filter');
                const checkIcon = item.querySelector('.check-icon');
                if (checkIcon) checkIcon.remove();
            });

            // 5. Add Active Styling to Clicked Button
            btnElement.classList.add('active-sem-filter');
            // Add checkmark (visual flair)
            if (!btnElement.querySelector('.check-icon')) {
                btnElement.insertAdjacentHTML('beforeend', '<i class="fas fa-check text-primary check-icon"></i>');
            }
        }
    </script>

<%- include('partials/footer') %>
