<%- include('partials/header') %>
    <div class="row flex-nowrap h-100">
        <!-- Sidebar (Reused from subject.ejs but simplified logic) -->
        <div class="col-md-3 col-lg-3 d-none d-md-block" data-aos="fade-right">
            <div class="sidebar p-3 rounded-3 shadow-sm sticky-top" style="top: 90px; height: 85vh;">
                <a href="/" class="btn btn-light btn-sm w-100 mb-4 text-start fw-bold text-muted">
                    <i class="fas fa-arrow-left me-2"></i> All Subjects
                </a>
                <h5 class="fw-bold mb-4 px-2 border-start border-4 border-primary ps-2"><%= subject.name %></h5>
                
                <div class="d-grid gap-2 mb-4">
                     <a href="/subject/<%= subject._id %>" class="btn btn-outline-primary btn-sm text-start">
                        <i class="fas fa-book-open me-2"></i> Study Notes
                     </a>
                     <a href="/subject/<%= subject._id %>/papers" class="btn btn-primary btn-sm text-start">
                        <i class="fas fa-file-alt me-2"></i> Question Papers
                     </a>
                </div>

                <hr>

                <% if (typeof chapters !== 'undefined') { %>
                    <% for (const [chapter, topicList] of Object.entries(chapters)) { %>
                        <div class="mb-3">
                            <h6 class="text-uppercase text-muted fw-bold px-2 mb-2" style="font-size: 0.75rem;"><%= chapter %></h6>
                            <div class="d-flex flex-column gap-1">
                                <% topicList.forEach(topic => { %>
                                    <a href="/subject/<%= subject._id %>?topicId=<%= topic._id %>" 
                                    class="sidebar-link px-3 py-2 text-decoration-none d-flex align-items-center">
                                        <i class="far fa-circle me-2 small text-muted" style="font-size: 0.6rem;"></i>
                                        <span class="text-truncate"><%= topic.title %></span>
                                    </a>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-9 ms-md-auto px-4 pb-5">
            <div class="content-wrapper" data-aos="fade-up">
                <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
                    <div>
                        <span class="badge bg-warning text-dark border mb-2">Resources</span>
                        <h1 class="h2 fw-bold mb-0 text-dark">Previous Year Papers</h1>
                    </div>
                </div>

                <% if (papers.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No papers uploaded for this subject yet.</h4>
                    </div>
                <% } %>

                <div class="row g-4">
                    <% papers.forEach(paper => { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm hover-card">
                                <div class="card-header bg-white border-bottom-0 pt-3">
                                    <span class="badge bg-info text-dark float-end"><%= paper.type.toUpperCase() %></span>
                                </div>
                                <div class="card-body text-center">
                                    <div class="mb-3 text-primary">
                                        <i class="fas fa-file-invoice fa-3x"></i>
                                    </div>
                                    <h5 class="fw-bold mb-1"><%= paper.title %></h5>
                                    <p class="text-muted mb-0"><%= paper.year %></p>
                                </div>
                                <div class="card-footer bg-white border-top-0 pb-3">
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-outline-primary flex-grow-1" data-bs-toggle="modal" data-bs-target="#paperModal<%= paper._id %>">
                                            <i class="far fa-eye me-2"></i> View
                                        </button>
                                        <% if (paper.images && paper.images.length > 0) { %>
                                            <a href="<%= paper.images[0].url.replace('/upload/', '/upload/fl_attachment/') %>" class="btn btn-success" title="Download Paper">
                                                <i class="fas fa-download"></i>
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                        <!-- Modal (PDF Style Viewer) -->
                            <div class="modal fade" id="paperModal<%= paper._id %>" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-fullscreen">
                                    <div class="modal-content" style="background-color: #323639;"> <!-- Chrome PDF Viewer Dark Gray -->
                                        
                                        <!-- Header (Fixed) -->
                                        <div class="modal-header border-bottom border-dark py-2 px-4" style="background-color: #202124; color: #f1f3f4;">
                                            <div class="d-flex align-items-center w-100">
                                                <div class="d-flex align-items-center me-auto text-truncate">
                                                    <i class="fas fa-file-pdf text-danger me-3 fa-lg"></i>
                                                    <div>
                                                        <h6 class="mb-0 fw-bold text-truncate" style="max-width: 300px;"><%= paper.title %></h6>
                                                        <small class="text-secondary"><%= paper.year || 'Unknown Year' %></small>
                                                    </div>
                                                </div>

                                                <div class="d-flex align-items-center gap-2">
                                                    <% if (paper.images && paper.images.length > 0) { %>
                                                        <a href="<%= paper.images[0].url.replace('/upload/', '/upload/fl_attachment/') %>" class="btn btn-sm btn-outline-light border-0" title="Download">
                                                            <i class="fas fa-download"></i>
                                                        </a>
                                                    <% } %>
                                                    <div class="vr bg-secondary mx-2"></div>
                                                    <button type="button" class="btn btn-sm btn-outline-light border-0 rounded-circle p-2" data-bs-dismiss="modal" aria-label="Close" style="width: 36px; height: 36px;">
                                                        <i class="fas fa-times fa-lg"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Body (Scrollable Stream) -->
                                        <div class="modal-body p-0 overflow-auto" style="background-color: #525659;">
                                            <% if (paper.images && paper.images.length > 0) { %>
                                                <div class="container-fluid py-5">
                                                    <div class="d-flex flex-column align-items-center gap-4">
                                                        
                                                        <% paper.images.forEach((img, index) => { %>
                                                            <div class="paper-page shadow-lg bg-white position-relative" style="width: 100%; max-width: 850px;">
                                                                <img src="<%= img.url %>" 
                                                                     class="w-100 h-auto d-block" 
                                                                     alt="Page <%= index + 1 %>"
                                                                     loading="lazy"
                                                                     style="min-height: 400px; background-color: white;"> <!-- Default bg helps white feel -->
                                                                
                                                                <!-- Page Number Overlay (Subtle) -->
                                                                <div class="position-absolute top-0 start-0 m-0 px-2 py-1 bg-dark text-white opacity-50 small font-monospace" style="border-bottom-right-radius: 4px;">
                                                                    <%= index + 1 %> / <%= paper.images.length %>
                                                                </div>

                                                                <!-- Download Page Button -->
                                                                <div class="position-absolute top-0 end-0 m-2">
                                                                    <a href="<%= img.url.replace('/upload/', '/upload/fl_attachment/') %>" class="btn btn-sm btn-dark bg-opacity-75 text-white border-0 shadow-sm" title="Download Page <%= index + 1 %>">
                                                                        <i class="fas fa-download"></i>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        <% }) %>

                                                    </div>
                                                    
                                                    <!-- End of Document Indicator -->
                                                    <div class="text-center mt-5 text-white-50">
                                                        <small>&mdash; End of Document &mdash;</small>
                                                    </div>
                                                </div>
                                            <% } else { %>
                                                <div class="d-flex justify-content-center align-items-center h-100 text-white-50">
                                                    <div class="text-center">
                                                        <i class="far fa-file-image fa-4x mb-3 text-secondary"></i>
                                                        <p class="mb-0">No pages available</p>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>


<%- include('partials/footer') %>