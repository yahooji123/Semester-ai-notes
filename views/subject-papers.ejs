<%- include('partials/header') %>
    <div class="row flex-nowrap h-100">
        <!-- Sidebar (Reused from subject.ejs but simplified logic) -->
        <div class="col-md-3 col-lg-3 d-none d-md-block" data-aos="fade-right">
            <div class="sidebar p-3 rounded-3 shadow-sm sticky-top" style="top: 90px; height: 85vh;">
                <a href="/" class="btn btn-light btn-sm w-100 mb-4 text-start fw-bold text-muted">
                    <i class="fas fa-arrow-left me-2"></i> All Subjects
                </a>
                <h5 class="fw-bold mb-4 px-2 border-start border-4 border-primary ps-2"><%= subject.name %></h5>
                
                <div class="d-grid gap-2 mb-4">
                     <a href="/subject/<%= subject._id %>" class="btn btn-outline-primary btn-sm text-start">
                        <i class="fas fa-book-open me-2"></i> Study Notes
                     </a>
                     <a href="/subject/<%= subject._id %>/papers" class="btn btn-primary btn-sm text-start">
                        <i class="fas fa-file-alt me-2"></i> Question Papers
                     </a>
                </div>

                <hr>

                <% if (typeof chapters !== 'undefined') { %>
                    <% for (const [chapter, topicList] of Object.entries(chapters)) { %>
                        <div class="mb-3">
                            <h6 class="text-uppercase text-muted fw-bold px-2 mb-2" style="font-size: 0.75rem;"><%= chapter %></h6>
                            <div class="d-flex flex-column gap-1">
                                <% topicList.forEach(topic => { %>
                                    <a href="/subject/<%= subject._id %>?topicId=<%= topic._id %>" 
                                    class="sidebar-link px-3 py-2 text-decoration-none d-flex align-items-center">
                                        <i class="far fa-circle me-2 small text-muted" style="font-size: 0.6rem;"></i>
                                        <span class="text-truncate"><%= topic.title %></span>
                                    </a>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-9 ms-md-auto px-4 pb-5">
            <div class="content-wrapper" data-aos="fade-up">
                <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
                    <div>
                        <span class="badge bg-warning text-dark border mb-2">Resources</span>
                        <h1 class="h2 fw-bold mb-0 text-dark">Previous Year Papers</h1>
                    </div>
                </div>

                <% if (papers.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No papers uploaded for this subject yet.</h4>
                    </div>
                <% } %>

                <div class="row g-4">
                    <% papers.forEach(paper => { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm hover-card">
                                <div class="card-header bg-white border-bottom-0 pt-3">
                                    <span class="badge bg-info text-dark float-end"><%= paper.type.toUpperCase() %></span>
                                </div>
                                <div class="card-body text-center">
                                    <div class="mb-3 text-primary">
                                        <i class="fas fa-file-invoice fa-3x"></i>
                                    </div>
                                    <h5 class="fw-bold mb-1"><%= paper.title %></h5>
                                    <p class="text-muted mb-0"><%= paper.year %></p>
                                </div>
                                <div class="card-footer bg-white border-top-0 pb-3">
                                    <div class="d-grid gap-2">
                                        <% if (paper.images && paper.images.length > 0) { %>
                                            <% if (paper.images.length === 1) { %>
                                                <a href="/paper/download/<%= paper._id %>?url=<%= encodeURIComponent(paper.images[0].url.replace('/upload/', '/upload/fl_attachment/')) %>" class="btn btn-success" title="Download Paper">
                                                    <i class="fas fa-download me-2"></i> Download
                                                </a>
                                            <% } else { %>
                                                <div class="dropdown">
                                                    <button class="btn btn-success w-100 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="fas fa-download me-2"></i> Download (<%= paper.images.length %> Pages)
                                                    </button>
                                                    <ul class="dropdown-menu w-100">
                                                        <% paper.images.forEach((img, index) => { %>
                                                            <li>
                                                                <a class="dropdown-item" href="/paper/download/<%= paper._id %>?url=<%= encodeURIComponent(img.url.replace('/upload/', '/upload/fl_attachment/')) %>">
                                                                    <i class="fas fa-file-image me-2 text-muted"></i> Page <%= index + 1 %>
                                                                </a>
                                                            </li>
                                                        <% }) %>
                                                    </ul>
                                                </div>
                                            <% } %>
                                        <% } else { %>
                                            <button class="btn btn-secondary" disabled>No Files</button>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>


<%- include('partials/footer') %>