<%- include('../partials/header') %>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">Add New Subject</div>
                <div class="card-body">
                    <form action="/admin/subject/add" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Semester (1-8)</label>
                            <input type="number" name="semester" class="form-control" min="1" max="8" value="1" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Subject Name</label>
                            <input type="text" name="name" class="form-control" placeholder="e.g., Data Structures" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description (Optional)</label>
                            <textarea name="description" class="form-control" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Create Subject</button>
                        <a href="/admin" class="btn btn-secondary ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
<%- include('../partials/footer') %>
