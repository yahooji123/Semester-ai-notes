<%- include('../partials/header') %>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-secondary fw-bold">Admin Dashboard</h2>
        <div>
            <a href="/admin/paper/add" class="btn btn-outline-primary shadow-sm me-2"><i class="fas fa-file-upload"></i> Upload Paper</a>
            <a href="/admin/subject/add" class="btn btn-primary shadow-sm"><i class="fas fa-plus"></i> Add New Subject</a>
        </div>
    </div>
    
    <!-- Analytics Section -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card h-100 border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-chart-line me-2"></i>Most Read Subject</h5>
                    <h2 class="display-6 fw-bold mt-3"><%= analytics.mostReadSubject._id || 'No Data' %></h2>
                    <p class="mb-0 text-white-50"><%= analytics.mostReadSubject.count || 0 %> students completed</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-warning fw-bold text-dark">
                    <i class="fas fa-exclamation-triangle me-2"></i>Stuck Points (Most Revised)
                </div>
                <ul class="list-group list-group-flush">
                    <% if (analytics.stuckTopics.length > 0) { %>
                        <% analytics.stuckTopics.forEach(item => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span class="text-truncate"><%= item.topicDetails.title %></span>
                                <span class="badge bg-warning text-dark rounded-pill"><%= item.count %> Revise</span>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <li class="list-group-item text-muted">No revision data yet.</li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
    
    <!-- Announcements & Settings -->
    <div class="row mb-4">
        <!-- Announcements -->
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <span class="fw-bold">Announcement Board</span>
                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addAnnouncementModal">
                        <i class="fas fa-plus"></i> New Notice
                    </button>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <% if (typeof announcements !== 'undefined' && announcements.length > 0) { %>
                            <% announcements.forEach(ann => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-secondary me-2"><%= ann.type %></span>
                                        <div class="text-truncate" style="max-width: 300px;"><%= ann.message %></div>
                                    </div>
                                    <form action="/admin/announcement/<%= ann._id %>/delete" method="POST" class="ms-2">
                                        <button class="btn btn-sm btn-outline-danger border-0">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item text-center text-muted py-3">No active announcements.</li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
        
        <!-- Registration Toggle Card -->
        <div class="col-md-4">
            <div class="d-flex flex-column gap-3 h-100">
                
                <!-- Student Login Toggle -->
                 <div class="card border-0 shadow-sm flex-fill">
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <h6 class="card-title text-muted text-uppercase fw-bold mb-2" style="font-size: 0.8rem;">Student Login Panel</h6>
                        <h4 class="fw-bold <%= studentLoginEnabled ? 'text-success' : 'text-danger' %> mb-3">
                            <%= studentLoginEnabled ? 'ONLINE' : 'OFFLINE' %>
                        </h4>
                        <form action="/admin/toggle-student-login" method="POST">
                            <button class="btn w-100 btn-sm rounded-pill fw-bold <%= studentLoginEnabled ? 'btn-outline-danger' : 'btn-success' %>">
                                <%= studentLoginEnabled ? 'Turn OFF Login' : 'Turn ON Login' %>
                            </button>
                        </form>
                        <% if (!studentLoginEnabled) { %>
                             <small class="text-danger mt-2" style="font-size: 0.7rem;">Students will see "Maintenance Mode"</small>
                        <% } %>
                    </div>
                </div>

                <!-- Registration Toggle -->
                <div class="card border-0 shadow-sm flex-fill">
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <h6 class="card-title text-muted text-uppercase fw-bold mb-2" style="font-size: 0.8rem;">New Registrations</h6>
                        <h4 class="fw-bold <%= currentUser.isRegistrationEnabled ? 'text-success' : 'text-danger' %> mb-3">
                            <%= currentUser.isRegistrationEnabled ? 'OPEN' : 'CLOSED' %>
                        </h4>
                        <form action="/admin/toggle-registration" method="POST">
                            <button class="btn w-100 btn-sm rounded-pill fw-bold <%= currentUser.isRegistrationEnabled ? 'btn-outline-danger' : 'btn-success' %>">
                                <%= currentUser.isRegistrationEnabled ? 'Close Signups' : 'Open Signups' %>
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Modal for Announcement -->
    <div class="modal fade" id="addAnnouncementModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Post Announcement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/announcement" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <input type="text" name="message" class="form-control" placeholder="e.g. Exam on Monday" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Type</label>
                            <select name="type" class="form-select">
                                <option value="info">Info (Blue)</option>
                                <option value="warning">Warning (Yellow)</option>
                                <option value="urgent">Urgent (Red)</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Manage Content (Semester Wise) -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                
                <!-- Updated Header with Dropdown -->
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <span class="fw-bold h5 mb-0"><i class="fas fa-layer-group me-2 text-primary"></i>Manage Course Content</span>
                    
                    <div class="dropdown">
                        <button class="btn btn-outline-primary shadow-sm dropdown-toggle px-4 py-2 fw-medium rounded-pill d-flex align-items-center gap-2 transition-all" 
                                type="button" 
                                id="adminSemDropdown" 
                                data-bs-toggle="dropdown" 
                                aria-expanded="false" 
                                style="min-width: 170px; justify-content: space-between;">
                            <span>Semester 1</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-2 p-2 rounded-3" aria-labelledby="adminSemDropdown">
                            <% for(let i=1; i<=8; i++) { %>
                                <li>
                                    <button class="dropdown-item rounded-2 py-2 mb-1 d-flex justify-content-between align-items-center <%= i===1 ? 'active-sem-admin' : '' %>" 
                                            type="button" 
                                            onclick="filterAdminSemester(<%= i %>, this)">
                                        <span>Semester <%= i %></span>
                                        <% if(i===1) { %><i class="fas fa-check text-primary check-icon"></i><% } %>
                                    </button>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Tab Content -->
                    <div class="tab-content" id="semesterTabsContent">
                        <% for(let i=1; i<=8; i++) { %>
                            <div class="tab-pane fade <%= i===1 ? 'show active' : '' %>" id="sem-<%= i %>" role="tabpanel">
                                <!-- Filter Subjects for this Sem -->
                                <% const semSubjects = subjects.filter(s => s.semester === i); %>
                                
                                <% if(semSubjects.length > 0) { %>
                                    <div class="accordion" id="accordionSem<%= i %>">
                                        <% semSubjects.forEach((subject, idx) => { %>
                                            <div class="accordion-item mb-3 border rounded shadow-sm">
                                                <h2 class="accordion-header" id="heading<%= subject._id %>">
                                                    <button class="accordion-button <%= idx !== 0 ? 'collapsed' : '' %> fw-bold bg-light text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= subject._id %>">
                                                        <%= subject.name %>
                                                    </button>
                                                </h2>
                                                <div id="collapse<%= subject._id %>" class="accordion-collapse collapse <%= idx === 0 ? 'show' : '' %>" data-bs-parent="#accordionSem<%= i %>">
                                                    <div class="accordion-body">
                                                        
                                                        <!-- Subject Actions -->
                                                        <div class="d-flex justify-content-between align-items-center mb-4 p-2 bg-light rounded">
                                                            <div>
                                                                <small class="text-uppercase text-muted fw-bold">Subject Actions</small>
                                                            </div>
                                                            <div class="btn-group">
                                                                <a href="/subject/<%= subject._id %>" class="btn btn-sm btn-outline-primary"><i class="fas fa-book-open me-1"></i> Manage Notes</a>
                                                                <form action="/admin/subject/<%= subject._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Ensure all papers are deleted first. Delete this Subject?')">
                                                                    <button class="btn btn-sm btn-outline-danger border-start-0 text-danger ms-2"><i class="fas fa-trash me-1"></i> Delete Subject</button>
                                                                </form>
                                                            </div>
                                                        </div>

                                                        <!-- Papers List -->
                                                        <h6 class="border-bottom pb-2 mb-3 fw-bold text-primary">Uploaded Documents (PYQ)</h6>
                                                        <% const subjectPapers = papers.filter(p => p.subject && p.subject._id.toString() === subject._id.toString()); %>
                                                        
                                                        <% if(subjectPapers.length > 0) { %>
                                                            <div class="list-group">
                                                                <% subjectPapers.forEach(paper => { %>
                                                                    <div class="list-group-item d-flex justify-content-between align-items-center border-start border-4 border-primary my-1">
                                                                        <div class="d-flex align-items-center">
                                                                            <div class="me-3 text-secondary"><i class="fas fa-file-alt fa-lg"></i></div>
                                                                            <div>
                                                                                <div class="fw-bold"><%= paper.title %></div>
                                                                                <small class="text-muted">
                                                                                    <%= paper.year %> 
                                                                                    <span class="mx-1">•</span> 
                                                                                    <%= paper.type.toUpperCase() %>
                                                                                    <span class="mx-1">•</span>
                                                                                    <%= paper.images ? paper.images.length : 0 %> Pg
                                                                                </small>
                                                                            </div>
                                                                        </div>
                                                                        <div class="d-flex align-items-center gap-2">
                                                                            <a href="/subject/<%= subject._id %>/papers" class="btn btn-sm btn-light text-primary" target="_blank" title="Preview"><i class="fas fa-external-link-alt"></i></a>
                                                                            <form action="/admin/paper/<%= paper._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this paper?');">
                                                                                <button type="submit" class="btn btn-sm btn-light text-danger" title="Delete"><i class="fas fa-trash"></i></button>
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                <% }) %>
                                                            </div>
                                                        <% } else { %>
                                                            <div class="text-center py-3 border rounded border-dashed text-muted bg-light">
                                                                <i class="fas fa-file-upload mb-2"></i>
                                                                <p class="mb-0 small">No Question Papers uploaded yet.</p>
                                                                <a href="/admin/paper/add" class="btn btn-sm btn-link text-decoration-none">Upload Now</a>
                                                            </div>
                                                        <% } %>

                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="d-flex flex-column align-items-center justify-content-center py-5 text-muted">
                                        <i class="fas fa-folder-open fa-3x mb-3 text-secondary opacity-50"></i>
                                        <h5>No Subjects in Semester <%= i %></h5>
                                        <p class="mb-4">Add a subject to get started.</p>
                                        <a href="/admin/subject/add" class="btn btn-outline-primary">Add Subject to Sem <%= i %></a>
                                    </div>
                                <% } %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        function filterAdminSemester(sem, btn) {
            // Hide all tab panes
            const allPanes = document.querySelectorAll('.tab-pane');
            allPanes.forEach(pane => {
                pane.classList.remove('show', 'active');
            });
            
            // Show target pane
            const targetPane = document.getElementById('sem-' + sem);
            if (targetPane) {
                targetPane.classList.add('active');
                setTimeout(() => targetPane.classList.add('show'), 10);
            }
            
            // Update Dropdown Button Text
            const dropdownBtn = document.getElementById('adminSemDropdown');
            dropdownBtn.querySelector('span').innerText = 'Semester ' + sem;
            
            // Update Active State in Dropdown Menu
            const allItems = document.querySelectorAll('.dropdown-item');
            allItems.forEach(item => {
                item.classList.remove('active-sem-admin');
                const icon = item.querySelector('.check-icon');
                if (icon) icon.remove();
            });
            
            // Set Active class and icon to clicked button
            btn.classList.add('active-sem-admin');
            btn.insertAdjacentHTML('beforeend', '<i class="fas fa-check text-primary check-icon"></i>');
        }
    </script>
    
    <style>
        .active-sem-admin {
            background-color: var(--bs-light);
            color: var(--bs-primary);
            font-weight: 600;
        }
        .dropdown-item:hover {
            background-color: var(--bs-light);
            transform: translateX(3px);
            transition: all 0.2s;
        }
    </style>
<%- include('../partials/footer') %>
