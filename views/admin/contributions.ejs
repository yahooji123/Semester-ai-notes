<%- include('../partials/header') %>

<div class="row g-0 flex-nowrap">
    <!-- Sidebar -->
    <div class="col-md-2 bg-white d-none d-md-block sidebar border-end">
        <div class="p-3">
            <h5 class="fw-bold mb-4 px-2">Admin Panel</h5>
            <div class="nav flex-column">
                <a href="/admin" class="sidebar-link px-3 py-2 mb-1 text-decoration-none rounded"><i class="fas fa-home me-2"></i>Dashboard</a>
                <a href="/admin/subjects" class="sidebar-link px-3 py-2 mb-1 text-decoration-none rounded"><i class="fas fa-book me-2"></i>Subjects</a>
                <a href="/contribution/admin/manage" class="sidebar-link px-3 py-2 mb-1 text-decoration-none rounded bg-primary bg-opacity-10 text-primary fw-bold"><i class="fas fa-hand-holding-heart me-2"></i>Contributions</a>
                <a href="/logout" class="sidebar-link px-3 py-2 mt-4 text-decoration-none rounded text-danger"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="col-md-10 bg-light p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-dark">Manage Student Contributions</h2>
        </div>

        <% if (pendingNotes.length === 0) { %>
            <div class="card border-0 shadow-sm p-5 text-center">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h4 class="fw-bold">All caught up!</h4>
                <p class="text-muted">No pending contributions to review.</p>
            </div>
        <% } else { %>
            <div class="row g-4">
                <% pendingNotes.forEach(note => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-header bg-white border-bottom-0 pt-3 d-flex justify-content-between">
                                <span class="badge bg-info text-dark">New Upload</span>
                                <small class="text-muted"><%= new Date(note.createdAt).toLocaleDateString() %></small>
                            </div>
                            <div class="card-body">
                                <h5 class="fw-bold mb-1"><%= note.title %></h5>
                                <p class="small text-muted mb-2">Subject: <%= note.subject.name %></p>
                                <p class="small text-muted mb-3">By: <%= note.uploadedBy.username %></p>
                                <p class="card-text text-truncate border rounded p-2 bg-light fst-italic"><%= note.description || 'No description' %></p>
                                
                                <div class="d-grid gap-2 mt-3">
                                    <a href="<%= note.fileUrl %>" target="_blank" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye me-1"></i> Preview File</a>
                                </div>
                            </div>
                            <div class="card-footer bg-white border-top-0 pb-3">
                                <div class="d-flex gap-2">
                                    <form action="/contribution/admin/approve/<%= note._id %>" method="POST" class="flex-grow-1">
                                        <button class="btn btn-success w-100"><i class="fas fa-check me-1"></i> Approve</button>
                                    </form>
                                    <form action="/contribution/admin/reject/<%= note._id %>" method="POST" class="flex-grow-1">
                                        <button class="btn btn-danger w-100"><i class="fas fa-times me-1"></i> Reject</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
