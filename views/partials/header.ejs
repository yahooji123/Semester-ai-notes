<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Semester Notes</title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- AOS Animation CSS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Summernote for Rich Text -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script>
        // Check for saved dark mode preference
        if (localStorage.getItem('theme') === 'dark') {
            document.body.classList.add('dark-mode');
        }
    </script>
</head>
<body class="">

    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/"><i class="fas fa-graduation-cap me-2"></i>Semester Notes</a>
            <button class="btn btn-sm btn-outline-dark ms-3 border-0" id="darkModeToggle">
                <i class="fas fa-moon"></i>
            </button>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-primary" href="/leaderboard"><i class="fas fa-trophy me-1"></i>Leaderboard</a>
                    </li>

                    <% if (typeof user !== 'undefined' && user) { %>
                        <div class="nav-item dropdown ms-3">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px; font-weight: bold; font-size: 0.9rem;">
                                    <%= user.name ? user.name.charAt(0).toUpperCase() : (user.username ? user.username.charAt(0).toUpperCase() : 'U') %>
                                </div>
                                <div class="d-none d-lg-block text-start" style="line-height: 1.2;">
                                    <div class="fw-bold text-dark" style="font-size: 0.9rem;"><%= user.name || user.username %></div>
                                    <small class="text-muted d-block" style="font-size: 0.75rem;">Sem <%= user.semester || 1 %></small>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-3 rounded-4 p-2" aria-labelledby="profileDropdown">
                                <li class="px-3 py-2 border-bottom mb-2">
                                    <div class="fw-bold text-dark"><%= user.name || user.username %></div>
                                    <small class="text-muted d-block text-truncate" style="max-width: 150px;"><%= user.email || '' %></small>
                                </li>
                                <li><a class="dropdown-item rounded-2" href="#" data-bs-toggle="modal" data-bs-target="#profileModal"><i class="fas fa-user-edit me-2 text-primary"></i>My Profile</a></li>
                                <% if(user.role === 'admin') { %>
                                    <li><a class="dropdown-item rounded-2" href="/admin"><i class="fas fa-tachometer-alt me-2 text-warning"></i>Dashboard</a></li>
                                <% } %>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item rounded-2 text-danger" href="/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                            </ul>
                        </div>
                    
                        

                    <% } else { %>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm rounded-pill px-4 shadow-sm" href="/login">Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
<% if (typeof user !== 'undefined' && user) { %>
    <!-- Profile Modal -->
                        <div class="modal fade" id="profileModal" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content border-0 shadow-lg top-rounded-lg">
                                    <div class="modal-header border-0 pb-0">
                                        <h5 class="modal-title fw-bold">My Profile</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <form action="/profile/update" method="POST">
                                        <div class="modal-body">
                                             <div class="text-center mb-4">
                                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px; font-size: 2rem; font-weight: bold;">
                                                    <%= user.name ? user.name.charAt(0).toUpperCase() : (user.username ? user.username.charAt(0).toUpperCase() : 'U') %>
                                                </div>
                                                <h5 class="fw-bold mb-0"><%= user.name || user.username %></h5>
                                                <span class="badge bg-secondary rounded-pill"><%= user.role === 'admin' ? 'Administrator' : 'Student' %></span>
                                             </div>

                                             <div class="mb-3">
                                                <label class="form-label text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Email Address</label>
                                                <input type="text" class="form-control bg-light" value="<%= user.email || 'N/A' %>" readonly disabled>
                                             </div>
                                             
                                             <div class="mb-3">
                                                <label class="form-label text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Current Semester</label>
                                                <select name="semester" class="form-select border-primary">
                                                    <% for(let i=1; i<=8; i++) { %>
                                                        <option value="<%= i %>" <%= user.semester == i ? 'selected' : '' %>>Semester <%= i %></option>
                                                    <% } %>
                                                </select>
                                                <div class="form-text small">Updating this will change your default view.</div>
                                             </div>
                                             
                                             <hr class="my-4 border-secondary opacity-10">
                                             
                                             <div class="mb-2">
                                                 <label class="form-label text-uppercase text-danger fw-bold" style="font-size: 0.7rem;">Security Check</label>
                                                 <input type="password" name="password" class="form-control" placeholder="Enter your password to save changes" required>
                                             </div>
                                        </div>
                                        <div class="modal-footer border-0 pt-0">
                                            <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">Save Changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
<% } %>


    <div class="container py-4" style="min-height: 85vh;">

    <!-- Global Announcements -->
    <% if (typeof announcements !== 'undefined' && announcements.length > 0) { %>
        <div class="row mb-4" data-aos="fade-down">
            <div class="col-12">
                <% announcements.forEach(ann => { %>
                    <div class="alert alert-<%= ann.type === 'urgent' ? 'danger' : (ann.type === 'warning' ? 'warning' : 'info') %> border-0 shadow-sm d-flex align-items-center mb-2" role="alert">
                        <i class="fas fa-bullhorn me-3 fa-lg"></i>
                        <div>
                            <strong>NOTICE:</strong> <%= ann.message %>
                            <br>
                            <small class="text-muted"><%= new Date(ann.createdAt).toLocaleDateString() %></small>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
