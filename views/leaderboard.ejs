<%- include('partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center mb-4 text-center">
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold text-primary mb-3">Student Leaderboard</h1>
            <p class="lead text-muted">See who's topping the charts this semester!</p>
        </div>
    </div>

    <!-- Leaderboard Section -->
    <div class="row justify-content-center" id="leaderboardSection" data-aos="fade-up">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-trophy me-2 text-warning"></i>Top Performers</h5>
                    <small class="opacity-75"><i class="fas fa-clock me-1"></i> Updates Hourly</small>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Rank</th>
                                    <th>Student</th>
                                    <th>Sem</th>
                                    <th class="text-end pe-4">Score</th>
                                </tr>
                            </thead>
                            <tbody class="border-top-0">
                                <% if (typeof leaderboard !== 'undefined' && leaderboard.length > 0) { %>
                                    <% leaderboard.forEach((student, index) => { %>
                                        <tr class="<%= index === 0 ? 'bg-warning bg-opacity-10' : '' %>">
                                            <td class="ps-4">
                                                <% if (index === 0) { %>
                                                    <i class="fas fa-crown text-warning fa-lg"></i>
                                                <% } else if (index === 1) { %>
                                                    <i class="fas fa-medal text-secondary fa-lg"></i>
                                                <% } else if (index === 2) { %>
                                                    <i class="fas fa-medal text-warning" style="filter: sepia(1);"></i>
                                                <% } else { %>
                                                    <span class="badge bg-light text-dark rounded-circle border p-2" style="width: 30px; height: 30px;"><%= index + 1 %></span>
                                                <% } %>
                                            </td>
                                            <td class="fw-bold">
                                                <%= (student.name || student.username).split(' ')[0] %> 
                                                <% if(index === 0) { %><span class="badge bg-warning text-dark ms-2" style="font-size: 0.6em;">CHAMPION</span><% } %>
                                            </td>
                                            <td><span class="badge bg-light text-muted border">Sem <%= student.semester %></span></td>
                                            <td class="text-end pe-4 fw-bold text-primary"><%= student.score %> pts</td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="4" class="text-center py-4 text-muted">Leaderboard is updating...</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="/" class="btn btn-outline-primary rounded-pill px-4"><i class="fas fa-arrow-left me-2"></i>Back to Home</a>
            </div>
        </div>
    </div>
</div>

<script>
    // Simple polling to keep leaderboard fresh without manual reload perception
    setInterval(() => {
        fetch(window.location.href)
            .then(response => response.text())
            .then(html => {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const newLeaderboard = doc.getElementById('leaderboardSection');
                if (newLeaderboard) {
                    document.getElementById('leaderboardSection').innerHTML = newLeaderboard.innerHTML;
                }
            });
    }, 60000); // Check every minute
</script>

<%- include('partials/footer') %>
